{
  "name": "undabot/json-api-core",
  "description": "",
  "license": "Apache-2.0",
  "require": {
    "php": "^8",
    "beberlei/assert": "^3.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^v3.35.1",
    "phpstan/phpstan-phpunit": "^1.3.15",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^9.5",
    "phpstan/extension-installer": "^1.3.1",
    "phpstan/phpstan-beberlei-assert": "^1.1.2",
    "ekino/phpstan-banned-code": "v1.0.0",
    "vimeo/psalm": "^5.15"
  },
  "autoload": {
    "psr-4": {
      "Undabot\\JsonApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Undabot\\JsonApi\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": [
      "php-cs-fixer fix --diff --ansi --dry-run"
    ],
    "phpstan": [
      "phpstan analyse -n --ansi --no-progress"
    ],
    "test": [
      "phpunit"
    ],
    "qc": [
      "@lint",
      "@phpstan",
      "@test"
    ]
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
